#!/bin/bash

message="{{ raspi_kiosk_friday_afternoon.message }}"
line_delay="{{ raspi_kiosk_friday_afternoon.line_delay }}"
chars_per_line="{{ raspi_kiosk_friday_afternoon.chars_per_line }}"

a=0
while true; do
    while read -n1 i ; do
        if [[ $i == _ ]]; then
            printf ' '
        else
	    printf "$i"
        fi
        a=$(( $a+1 ))
        if (( $a == $chars_per_line )); then
            printf '\n'
            a=0
        fi
    done < <(echo -n "$message")
done |
toilet -F gay -t |
while IFS= read line; do
    printf '%s\n' "$line"
    sleep $line_delay
done
